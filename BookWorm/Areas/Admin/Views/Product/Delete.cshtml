@model Product;

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Delete Product</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* <div><h2 class="text-primary"> Create Product</h2> <hr /></div> *@
                <div class="border p-3">
                    @* <div><h2 class="text-primary"> Create Product</h2> <hr /></div> *@
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Title" class="form-control border-0 shadow" disabled placeholder="Product Title">
                        <label asp-for="Title"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" class="form-control border-0 shadow" disabled placeholder="Description">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ISBN" class="form-control border-0 shadow" disabled placeholder="ISBN">
                        <label asp-for="ISBN"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Author" class="form-control border-0 shadow" disabled placeholder="Author's Name">
                        <label asp-for="Author"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ListPrice" class="form-control border-0 shadow" disabled placeholder="List Price">
                        <label asp-for="ListPrice"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="CategoryId" class="form-control border-0 shadow" disabled placeholder="CategoryId">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" class="form-control border-0 shadow" disabled placeholder="Price">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price50" class="form-control border-0 shadow" disabled placeholder="Price 50+">
                        <label asp-for="Price50"></label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price100" class="form-control border-0 shadow" disabled placeholder="Price 100+">
                        <label asp-for="Price100"></label>
                    </div>
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger" style="width:150px; margin-right:20px">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="index" class="btn btn-outline-primary border form-control" style="width:150px;">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>


