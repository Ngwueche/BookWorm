@model List<Product>;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="pt-4">
            <div class="col-6 text-end pb-4">
                <a asp-controller="product" asp-action="upsert" class="btn btn-dark"> <i class="bi bi-plus-circle"></i> Add Product</a>
            </div>
        </div>
        <table id="tblData" asp- class="table text-center table-bordered table-striped">
            <thead>
                <tr>
                    <th> Title </th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}