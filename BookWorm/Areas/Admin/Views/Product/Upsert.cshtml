@model ProductVM;

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden/>
            <div class="border p-3">
                @* <div><h2 class="text-primary"> Create Product</h2> <hr /></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" placeholder="Product Title">
                    <label asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" placeholder="Description">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" placeholder="ISBN">
                    <label asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" placeholder="Author's Name">
                    <label asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow" placeholder="Category">
                        <option disabled selected> ---Select Category---</option>
                    </select>
                    <label asp-for="CategoryId">Category</label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" placeholder="List Price">
                    <label asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" placeholder="Price">
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" placeholder="Price 50+">
                    <label asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" placeholder="Price 100+">
                    <label asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" class="form-control border-0 shadow" placeholder="Price 100+">
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    @if(Model.Id != 0){
                    <button type="submit" class="btn btn-primary" style="width:150px; margin-right:20px">Update</button>
                    }else{
                    <button type="submit" class="btn btn-primary" style="width:150px; margin-right:20px">Create</button>
                    }
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="index" class="btn btn-outline-primary border form-control" style="width:150px; background-color: orangered">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
