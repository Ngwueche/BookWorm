    var inprocess = "text-primary";
    var pending = "text-primary";
    var approved = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        
    }
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class= "d-flex justify-content-between pb-5 pt-2">
            <span></span>
            <ul class=" list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-action="index" asp-controller="order" asp-route-status="completed">
                    <li class="list-group-item">Completed</li>
                </a><a style="text-decoration:none;" asp-action="index" asp-controller="order" asp-route-status="inprocess">
                <li class="list-group-item">In Process</li>
                </a><a style="text-decoration:none;" asp-action="index" asp-controller="order" asp-route-status="pending">
                <li class="list-group-item">Pending</li>
                </a><a style="text-decoration:none;" asp-action="index" asp-controller="order" asp-route-status="approved">
                <li class="list-group-item">Approved</li>
                </a><a style="text-decoration:none;" asp-action="index" asp-controller="order" asp-route-status="all">
                <li class="list-group-item">All</li>
                </a>
            </ul>
        </div>
        <table id="tblData" asp- class="table text-center table-bordered table-striped">
            <thead>
                <tr>
                    <th> ID </th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
