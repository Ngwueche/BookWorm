<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="pt-4">
            <div class="col-6 text-end pb-4">
                <a asp-controller="company" asp-action="upsert" class="btn btn-dark"> <i class="bi bi-plus-circle"></i> Add Company</a>
            </div>
        </div>
        <table id="tblData" asp- class="table text-center table-bordered table-striped">
            <thead>
                <tr>
                    <th> Name </th>
                    <th> Email </th>
                    <th>Street Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/company.js"></script>
}